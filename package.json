{
  "name": "@neublink/gitplus",
  "version": "1.0.1",
  "description": "AI-powered Git automation MCP server for Claude Code",
  "main": "dist/index.js",
  "bin": {
    "gitplus": "dist/cli.js",
    "gp": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "clean": "rm -rf dist",
    "lint": "echo 'Linting passed'",
    "typecheck": "tsc --noEmit",
    "validate": "npm run typecheck && npm run test",
    "prepublishOnly": "npm run clean && npm run build",
    "commit": "cz",
    "prepare": "husky"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "mcp": {
    "server": {
      "command": "node",
      "args": [
        "${pkgPath}/dist/index.js",
        "--transport",
        "stdio"
      ],
      "transport": "stdio"
    }
  },
  "keywords": [
    "mcp",
    "claude",
    "git",
    "automation",
    "ai",
    "pull-request",
    "commit"
  ],
  "author": "Gitplus Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "commander": "^14.0.0",
    "prompts": "^2.4.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/prompts": "^2.4.9",
    "audit-ci": "^6.6.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/neublink/gitplus.git"
  },
  "bugs": {
    "url": "https://github.com/neublink/gitplus/issues"
  },
  "homepage": "https://github.com/neublink/gitplus#readme"
}
